<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="0dp"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageIcon"
                    android:src="@drawable/bottom_nav_bg"
                    android:layout_gravity="center_vertical"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/taskCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/plusjakarta_medium"
                        android:text="@string/Category"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/taskTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="6dp"
                        android:textStyle="bold"
                        android:text="Title"
                        android:fontFamily="@font/plusjakarta_semibold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/taskDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginTop="6dp"
                        android:text="Description"
                        android:fontFamily="@font/plusjakarta_regular"
                        android:textColor="@color/black"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:id="@+id/streak_reminder_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/streakContainer"
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/streakIcon"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/bottom_nav_bg"/>
                            <TextView
                                android:id="@+id/streakCount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:text="11:00"
                                android:fontFamily="@font/plusjakarta_regular"
                                android:textColor="@color/black" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical">

                    <CheckBox
                        android:id="@+id/checkBox"
                        android:src="@drawable/bottom_nav_bg"
                        android:layout_gravity="center_vertical"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:visibility="gone"/>

                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/reminderContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="end|bottom"
            android:layout_margin="12dp"
            android:gravity="center"
            android:background="@drawable/category_bg"
            android:backgroundTint="@color/bg_white"
            android:padding="6dp">

            <ImageView
                android:id="@+id/reminderIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/timeclock" />

            <TextView
                android:id="@+id/reminderTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plusjakarta_medium"
                android:text="11:00"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
