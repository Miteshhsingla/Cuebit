<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:startColor="@color/light_purple"
                android:endColor="@color/dark_purple" />            <corners android:radius="20dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/secondary" /> <!-- Default background color -->
            <corners android:radius="16dp" /> <!-- Corner radius -->
        </shape>
    </item>
</selector>
