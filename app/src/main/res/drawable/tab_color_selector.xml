<!-- res/drawable/tab_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#0C6478" /> <!-- Background color when selected -->
            <corners android:radius="20dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" /> <!-- Default background color -->
            <corners android:radius="16dp" /> <!-- Corner radius -->
        </shape>
    </item>
</selector>
